mixin icon(name, className)
  - var icon = require(`images/icons/${name}.svg`);
  svg(class=className viewBox=icon.viewBox preserveAspectRatio="none")
    use(xlink:href=icon.url)

mixin image(path, className)
  img(src=require(`images/${path}`) class=className role="presentation")

mixin nav()
  - var links = ['Главная','Обо мне','Навыки','Работы','Отзывы','Связаться']
  nav.menu
    ul.menu__list
      each i in links
        li.menu__list__item
          a(href="#").menu__list__item--a=i