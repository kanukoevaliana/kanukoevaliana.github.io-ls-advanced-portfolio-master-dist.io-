.work__block{
    padding: 100px 0 150px 0;
    @include phones{
        width: 100%;
    }
}
.work__block--title{
    color: #000;
    @include phones{
        text-align: center;
    }
}
.work__block-content{
    display: flex;
    justify-content: space-between;
    margin-top: 65px;
    @include tablets{
        display: flex;
        flex-direction: column;
    }
    @include phones{
        width: 100%;
    }
}
