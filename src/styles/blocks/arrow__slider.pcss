.arrow__slider{
    width: 40px;
    height: 40px;
    fill: #fff;
}
.arrow-right, .arrow-left{
    border: 1px solid #fff;
    border-radius: 50%;
    padding: 15px;
    &:hover{
        fill: $base;
        border: 1px solid $base;
    }
    &:active{
        fill: $base;
        border: solid $base;
    }
}
.arrow-left{
    transform: rotate(180deg)
}
.arrow-right{
    margin-left: 30px;
}